{
  "assistant": {
    // "default_model": {
    //   "provider": "copilot_chat",
    //   "model": "gpt-4o"
    // },
    "default_model": {
      "provider": "ollama",
      "model": "deepseek-coder-v2:latest"
    },
    "version": "2"
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "vim_mode": true,
  "ui_font_size": 18,
  "buffer_font_size": 17,
  "buffer_font_family": "FiraCode Nerd Font",
  "buffer_font_weight": 450,
  "relative_line_numbers": true,
  "scrollbar": {
    "show": "never"
  },
  "buffer_line_height": {
    "custom": 1.4
  },
  "cursor_blink": false,

  "theme": {
    "mode": "system",
    "light": "Catppuccin Mocha",
    "dark": "One Dark"
  },
  "terminal": {
    "font_family": "FiraCode Nerd Font",
    "font_size": 16
  },

  // Indent settings
  // "tab_size": 8,

  "project_panel": {
    // "auto_reveal_entries": false,
    "folder_icons": true,
    "file_icons": true
    // "indent_size": 40
  },

  // "languages": {
  //   "Solidity": {
