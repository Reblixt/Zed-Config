// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette
{
  "icon_theme": "Zed (Default)",
  "features": {
    "edit_prediction_provider": "zed"
  },
  "assistant": {
    // "default_model": {
    //   "provider": "copilot_chat",
    //   "model": "gpt-4o"
    // },
    "default_model": {
      // "provider": "ollama",
      // "model": "deepseek-coder-v2:latest"
      "provider": "anthropic",
      "model": "claude-3-5-sonnet-latest"
    },
    "version": "2"
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "vim_mode": true,
  "ui_font_size": 18,
  "buffer_font_size": 17,
  "buffer_font_family": "FiraCode Nerd Font",
  "buffer_font_weight": 450,
  "relative_line_numbers": true,
  "scrollbar": {
    "show": "never"
  },
  "buffer_line_height": {
    "custom": 1.4
  },
  "cursor_blink": false,

  "theme": {
    "mode": "system",
    "light": "Kanagawa",
    "dark": "Kanagawa Wave"
  },
  "terminal": {
    "font_family": "FiraCode Nerd Font",
    "font_size": 16
  },

  // Indent settings
  // "tab_size": 8,

  "project_panel": {
    // "auto_reveal_entries": false,
    "folder_icons": true,
    "file_icons": true
    // "indent_size": 40
  },
  "languages": {
    "Move": {
      "formatter": {
        "external": {
          "command": "prettier-move",
          "arguments": ["--stdin-filepath", "{buffer_path}"]
        }
      }
    }
  },

  "experimental.theme_overrides": {
    "syntax": {
      "include.member": { "color": "#89b4fa" },
      "constructor.name": { "color": "#FFA066" },
      "namespace.module.name": { "color": "#b4befe" },
      "macro.call": { "color": "#C34043" },
      "function.call": { "color": "#7E9CD8" },
      "variable.special": { "color": "#E46876" },
      "variable.parameter": { "color": "#E46876" },
      "property": { "color": "#E46876" },
      "variable": { "color": "#DCD7BA" },
      "type.definition.struct": { "color": "#FFA066" },
      "type.name": { "color": "#FFA066" },
      "type": { "color": "#F4BB5C" },
      "number": { "color": "#FFA066" },
      "punctuation.special": { "color": "#FFA066" },
      "punctuation.bracket": { "color": "#957FB8" }
    }
  }
}
