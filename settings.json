  //     },

  //     "always_treat_brackets_as_autoclosed": true,
  //     "use_autoclose": true,
  //     "use_auto_surround": true
  //   }
  // }

  "lsp": {
    "rust-analyzer": {
      "procMacro": {
        "ignored": [
          // optional:
          // "component",
          "server"
        ]
      }
    }
  },

  // "lsp": {
  //   "nomicfoundation-solidity-language-server":{
  //     "binary": {

  //     }
  //   }
  // }
  "languages": {
    "Solidity": {
      "tab_size": 5,
      "formatter": "auto"
    }
  }
